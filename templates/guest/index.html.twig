{% extends 'base.html.twig' %}
{% block title %}Homepage{% endblock %}

{% block body %}

    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>



    <div class="container text-center">
        <div class="row">
            <div class="col">
                <img src="{{ asset('img/pizzabanner1.png') }}" class="mx-auto d-block w-75" alt="Pizza Banner">
            </div>
        </div>
        <div class="row mt-2">
{% for category in categories %}

            <div class="col-3 mx-auto d-block mt-2 d-flex">
                <div class="card" style="width: 15rem;">
                    <img src="{{ asset('img/' ~ category.image) }}" class="card-img-top" alt="{{ category.image }}">
                    <div class="card-body">
                        <h3 class="card-text text-center fw-lighter  mt-2">{{ category.name }}</h3>
                        <p class="card-text fw-lighter">{{ category.description }}</p>
                        <a href="{{ path('category', {id: category.id}) }}" class="btn btn-success">Bekijk</a>
                    </div>

                </div>
            </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
